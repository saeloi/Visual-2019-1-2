        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Margin="0,10,0,0" Stretch="Fill" Source="flower.jpg"/>

        <Button x:Name="btnStart" Content="Play" Margin="652,117,65,0" Click="BtnPlay_Click" Height="49" VerticalAlignment="Top"/>
        <Button x:Name="btnQuit" Content="Quit" Margin="652,171,65,0" Click="BtnQuit_Click" Height="49" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="32,28,0,0" TextWrapping="Wrap" Text="Eat 25 Eggs Using Arrow Keys" VerticalAlignment="Top"/>

    </Grid>
</Window>
